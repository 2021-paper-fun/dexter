{
  "version": 2,
  "controller": {},
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "realm1",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": false,
                    "register": false,
                    "publish": false,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            },
            {
              "name": "full",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 443,
            "tls": {
              "key": "server_key.pem",
              "certificate": "server_cert.pem"
            }
          },
          "paths": {
            "/": {
              "type": "static",
              "directory": "../../web"
            },
            "ws": {
              "type": "websocket",
              "options": {
                "auto_ping_timeout": 3000,
                "auto_ping_interval": 5000
              },
              "auth": {
                  "type": "static",
                      "role": "full"
                    },
                      "role": "full"
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  ]
}
